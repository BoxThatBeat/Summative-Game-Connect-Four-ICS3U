class ConnectFour {

  public static void main (String [] args) {
    char[][] board = new char[6][7];
    int user1, user2;
    boolean chipPlaced;
    System.out.println("Welcome to Connect Four!");  
    
    
    for (int y=0; y<6; y++) {
      for (int x=0; x<7; x++) {
        board[y][x] = 32;
      }
    }
    
    /*System.out.print("Enter location : ");
