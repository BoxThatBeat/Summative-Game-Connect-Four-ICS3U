    do {
      
    printBoard(board);
    
    System.out.print("Enter location : ");
    user1 = In.getInt();
    user1 -=1;
    
    for (int i=0; i<7; i++) { // Looping through the columns
      chipPlaced = false;
      if (user1 == i) {
        for (int x=5; x>=0; x--) { // Looping through the rows
          if (board[x][i] == 32 && chipPlaced == false) {
            board[x][i] = 82;
            chipPlaced = true;
          }
        }
      }
    }
    
    } while (false!=true);
    
  }
  
  public static void printBoard (char[][] board) { // Void method to print the game board
    System.out.println(" 1  2  3  4  5  6  7");
    for (int y=0; y<6; y++) {
      for (int x=0; x<7; x++) {
        System.out.print("[");
        System.out.print(board[y][x]);
        System.out.print("]");
      }
      System.out.print("\n");
    }
  }
  

}
